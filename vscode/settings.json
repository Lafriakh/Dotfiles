{
    // General
    // "editor.fontSize": 15,
    "breadcrumbs.enabled": false,
    "workbench.iconTheme": "vs-minimal",
    "editor.minimap.enabled": true,
    "editor.fontFamily": "'Consolas', 'DejaVu Sans Mono', 'Hack', 'Droid Sans Mono', 'monospace', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 17,
    "editor.fontLigatures": true,
    "editor.tabCompletion": "on",
    "terminal.integrated.fontSize": 16,

    // Vim
    "vim.leader": ",",
    "vim.easymotion": true,
    "vim.sneak": true,
    "vim.incsearch": true,
    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    "vim.hlsearch": true,
    "vim.insertModeKeyBindings": [
        {"before": ["j","j"], "after": ["<Esc>"]},
        {"before": [",", "e"], "commands": ["editor.emmet.action.expandAbbreviation"]},
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {"before": ["<leader>","d"], "after": ["d", "d"]},
        {"before": ["<leader>", "<space>"], "commands": [":nohl"]},
        {"before": ["<leader>", "w"], "commands": [":w"]},
        {"before": ["<leader>", "n"], "commands": ["workbench.action.toggleSidebarVisibility"]},
        {"before": ["<leader>", "c"], "commands": [":q"]},
        {"before": ["<C-k>"], "commands": ["editor.action.insertCursorAbove"]},
        {"before": ["<C-j>"], "commands": ["editor.action.insertCursorBelow"]},
    ],
    "vim.disableExtension": false,
    "vim.handleKeys":{
        "<C-a>": false,
        "<C-f>": false
    },
    // Neovim
    "vim.enableNeovim": true,
    "vim.neovimPath": "/usr/bin/nvim",
    "vim.easymotionMarkerFontWeight": "bold",
    "vim.easymotionMarkerFontSize": "16",
    "vim.easymotionMarkerWidthPerChar": 10,
    "vim.easymotionMarkerHeight": 18,

    // PHP
    "php.validate.enable": true,
    "php.validate.executablePath": "/usr/bin/php",
    "php.validate.run": "onSave",
    "phpcs.executablePath": "/home/lafriakh/.config/composer/vendor/bin/phpcs",
    "phpcs.standard": "PSR2",
    "php-cs-fixer.onsave": true,
    "php-cs-fixer.executablePath": "${extensionPath}/php-cs-fixer.phar",

    // JavaScript
    "eslint.alwaysShowStatus": true,

    // GitLens
    "gitlens.currentLine.enabled": false,
    "gitlens.blame.highlight.enabled": false,
    "gitlens.codeLens.enabled": false,

    // Git
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "php-cs-fixer.lastDownload": 1549993545743,
    "window.zoomLevel": 0,
    "workbench.colorTheme": "Solarized Light",
}
