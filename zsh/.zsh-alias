# Git
alias ga="git add ."
alias gs="git status"
alias gc="git commit -m"
alias gt="git for-each-ref --sort=creatordate --format='%(refname:lstrip=2) - %(contents:subject)' refs/tags"
alias gb="git show-branch --list"

# General
alias time="/usr/bin/time -p"
alias ll="ls -l --group-directories-first --color=auto"
alias ls="ls --group-directories-first --color=auto"

# Arch Linux
alias pacman="sudo pacman"
