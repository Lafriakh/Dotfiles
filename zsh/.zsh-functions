# Git: add, commit, push in one command.
function gitp() {
    git add .
    
    if [ "$1" != "" ]
    then
        git commit -m "$1"
    else
        git commit -m update
    fi
    
    git push
}

function gitt() {
    
    if [ "$1" != "" ]
    then
        git tag v"$1"
    fi
    
    git push --tags
}

function config-reload() {
    source ~/.zshrc
}
